---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/"
     xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}/</link>
    <category>Technology</category>
    <copyright>Chris Hunt</copyright>
    <language>en-us</language>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <image>
      <url>{{ "/img/cover.png" | prepend: site.url }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}/</link>
    </image>

    <rawvoice:rating>TV-G</rawvoice:rating>
    <rawvoice:location>Portland, OR</rawvoice:location>
    <rawvoice:frequency>Weekly</rawvoice:frequency>

    <atom:link href="{{ "/feed.xml" | prepend: site.url }}"
               rel="self"
               type="application/rss+xml" />

    <itunes:subtitle>{{ site.title | xml_escape }}</itunes:subtitle>
    <itunes:keywords>{{ site.keywords }}</itunes:keywords>
    <itunes:author>Chris Hunt</itunes:author>
    <itunes:summary>{{ site.description | xml_escape }}</itunes:summary>
    <itunes:image href="{{ "/img/cover.png" | prepend: site.url }}" />
    <itunes:explicit>no</itunes:explicit>
    <itunes:category text="Technology">
      <itunes:category text="Software How-To"/>
    </itunes:category>
    <itunes:owner>
      <itunes:name>Chris Hunt</itunes:name>
      <itunes:email>chris@healthyhacker.com</itunes:email>
    </itunes:owner>

    {% for post in site.posts %}
      <item>
        <title>{{ post.episode }}: {{ post.title | xml_escape }}</title>
        <author>chris@healthyhacker.com (Chris Hunt)</author>
        <description>{{ post.content | xml_escape }}</description>
        <link>{{ post.url | prepend: site.url }}</link>
        <category>Technology</category>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
        <enclosure url="{{ site.mp3url }}/healthyhacker-{{ post.episode }}.mp3"
                   length="{{ post.size_in_bytes }}"
                   type="audio/mpeg" />

        <content:encoded><![CDATA[
          {{ post.content }}
        ]]></content:encoded>

        <itunes:subtitle>
          {{ post.episode }}: {{ post.title | xml_escape }}
        </itunes:subtitle>
        <itunes:keywords>{{ site.keywords }}</itunes:keywords>
        <itunes:summary>{{ post.content | strip_html }}</itunes:summary>
        <itunes:author>Chris Hunt</itunes:author>
        <itunes:duration>{{ post.duration_in_seconds }}</itunes:duration>
        <itunes:explicit>no</itunes:explicit>
        <itunes:image href="{{ "/img/cover.png" | prepend: site.url }}" />
      </item>
    {% endfor %}
  </channel>
</rss>
